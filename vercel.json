{
  "version": 2,
  "public": true,
  "rewrites": [
    { "source": "/", "destination": "/landing.html" },
    { "source": "/game", "destination": "/new-game.html" },
    { "source": "/about", "destination": "/about.html" },
    { "source": "/docs", "destination": "/docs.html" },
    { "source": "/leaderboard", "destination": "/leaderboard.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    }
  ]
}
